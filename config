# ===== 设备架构：BT-R320 / MT7621 =====
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_bt_r320=y

# ===== LuCI Web 管理界面 =====
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl-openssl=y
CONFIG_PACKAGE_luci-app-firewall=y
# CONFIG_PACKAGE_luci-ssl is not set

# ===== DNS / 分流（轻量但好用）=====
CONFIG_PACKAGE_luci-app-smartdns=y

# 可选：如果你习惯在 Clash/Passwall 内部做分流，可以之后考虑去掉 SmartDNS 精简一点

# ===== OpenClash（主力 Clash 端）=====
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_dnsmasq_full_ipset=y
CONFIG_PACKAGE_dnsmasq_full_dhcpv6=y

# ===== Passwall 5.x（多协议备份 & 复杂场景）=====
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Xray=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_SingBox=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_ChinaDNS_NG=y

# Passwall 基础依赖（避免编译时乱拉东西）
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-nat=y

# ===== 基础工具（调试 / 运维）=====
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y

# ===== 编译稳定性修复 =====
CONFIG_PACKAGE_libncurses=y
# CONFIG_PACKAGE_ncurses is not set
# CONFIG_PACKAGE_rust is not set
# CONFIG_PACKAGE_uboot-mediatek is not set

# ===== SSL 后端：只用 OpenSSL（防冲突）=====
CONFIG_PACKAGE_libustream-openssl20201210=y
# CONFIG_PACKAGE_libustream-mbedtls20201210 is not set
